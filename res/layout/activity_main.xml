                <ImageView
                    android:id="@+id/img_display"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="matrix"
                    android:src="@drawable/use1" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout1"
